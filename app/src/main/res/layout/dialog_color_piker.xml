<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingVertical="10dp">

    <TextView
        android:id="@+id/tvCanCelColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:text="Canel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/vColor"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="@+id/tvCanCelColor"
        app:layout_constraintStart_toStartOf="@+id/tvCanCelColor"
        app:layout_constraintTop_toBottomOf="@+id/tvCanCelColor" />

    <TextView
        android:id="@+id/tvChoose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:text="Choose"
        app:layout_constraintBottom_toBottomOf="@id/tvCanCelColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvCanCelColor" />

    <ImageView
        android:id="@+id/imgColorPiker"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tvChoose"
        app:layout_constraintStart_toEndOf="@+id/tvCanCelColor"
        app:layout_constraintTop_toBottomOf="@+id/tvCanCelColor"
        tools:ignore="ContentDescription" />


</androidx.constraintlayout.widget.ConstraintLayout>